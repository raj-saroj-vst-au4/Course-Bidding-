<!--Container Main start-->
<div>
  <table class="table table-dark table-striped border border-4">
    <thead>
      <tr>
        <th scope="col" class="sticky-top">Course Code</th>
        <th scope="col" class="sticky-top">Faculty</th>
        <th scope="col" class="sticky-top">Term 1 Course Name with Credits</th>
        <th scope="col" class="sticky-top">Previous Bids</th>
        <th scope="col" class="sticky-top">Seats</th>
        <th scope="col" class="sticky-top">Bidding Action</th>
      </tr>
    </thead>
    <tbody>
      {{#each data}}
        {{#ifeq this.course_term 1}}
          <tr>
            <td scope="row" id="course_code">{{this.course_code}}</td>
            <td scope="row" id="course_fac">{{this.course_faculty}}</td>
            <td scope="row" id="course_name">{{this.course_name}}
              :
              {{this.course_credits}}</td>
            <td scope="row"><button
                class="btn btn-primary view_bids"
              >View</button></td>
            <td scope="row" id="course_seats">{{this.course_seats}}</td>
            <td scope="row">
              <input
                class="bid-num"
                size="7"
                type="number"
                min="0"
                placeholder="Enter Bid"
              />
            </td>
          </tr>
        {{/ifeq}}
      {{/each}}
      {{! <tfoot>
                <tr>
                    <td colspan="5" style="text-align: center"></td>
                    <td><button class="btn btn-primary" id="bid_submit">Submit Bid</button></td>
                </tr>
            </tfoot> }}
    </tbody>
  </table>

  <hr />

  <table class="table table-dark table-striped border border-4">
    <thead>
      <tr>
        <th scope="col" class="sticky-top">Course Code</th>
        <th scope="col" class="sticky-top">Faculty</th>
        <th scope="col" class="sticky-top">Term 2 Course Name</th>
        <th scope="col" class="sticky-top">Previous Bids</th>
        <th scope="col" class="sticky-top">Seats</th>
        <th scope="col" class="sticky-top">Bidding Action</th>
      </tr>
    </thead>
    <tbody>
      {{#each data}}
        {{#ifeq this.course_term 2}}

          <tr>
            <td scope="row">{{this.course_code}}</td>
            <td scope="row">{{this.course_faculty}}</td>
            <td scope="row">{{this.course_name}} : {{this.course_credits}}</td>
            <td scope="row"><button
                class="btn btn-primary view_bids"
              >View</button></td>
            <td scope="row">{{this.course_seats}}</td>
            <td scope="row">
              <input
                class="bid-num"
                size="7"
                type="number"
                min="0"
                placeholder="Enter Bid"
              />
            </td>
          </tr>
        {{/ifeq}}
      {{/each}}
      <tfoot>
        <tr>
          <td colspan="5" style="text-align: center"></td>
          <td><button class="btn btn-primary" id="bid_submit">Submit Bid</button></td>
        </tr>
      </tfoot>
    </tbody>
  </table>
</div>
<!--Container Main end-->