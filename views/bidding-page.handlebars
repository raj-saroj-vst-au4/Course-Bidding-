<!--Container Main start-->
<div>
  <table class="table table-dark table-striped border border-4">
    <thead class="sticky-top" style="top: 50px">
      <tr>
        <th scope="col">Select</th>
        <th scope="col">Course Code</th>
        <th scope="col">Faculty</th>
        <th scope="col">Term 1 Course Name with Credits</th>
        <th scope="col">Previous Bids</th>
        <th scope="col">Seats</th>
        <th scope="col">Bidding Action</th>
      </tr>
    </thead>
    <tbody id="table-term1">
      {{#each data}}
        {{#ifeq this.course_term 1}}
          <tr>
            <td scope="row"><div class="form-check form-switch"><input
                  class="form-check-input"
                  type="checkbox"
                  id="checkboxterm1"
                /></div></td>
            <td scope="row" id="course_code">{{this.course_code}}</td>
            <td scope="row" id="course_fac">{{this.course_faculty}}</td>
            <td scope="row" id="course_name">{{this.course_name}}
              :
              {{this.course_credits}}</td>
            <td scope="row"><button
                class="btn btn-primary view_bids"
              >View</button></td>
            <td scope="row" id="course_seats">{{this.course_seats}}</td>
            <td scope="row">
              <input
                class="bid-num"
                size="7"
                type="number"
                min="0"
                placeholder="Enter Bid"
                disabled
              />
            </td>
          </tr>
        {{/ifeq}}
      {{/each}}
      {{! <tfoot>
                <tr>
                    <td colspan="5" style="text-align: center"></td>
                    <td><button class="btn btn-primary" id="bid_submit">Submit Bid</button></td>
                </tr>
            </tfoot> }}
    </tbody>
  </table>

  <hr />

  <table class="table table-dark table-striped border border-4">
    <thead class="sticky-top" style="top: 50px">
      <tr>
        <th scope="col">Select</th>
        <th scope="col">Course Code</th>
        <th scope="col">Faculty</th>
        <th scope="col">Term 2 Course Name</th>
        <th scope="col">Previous Bids</th>
        <th scope="col">Seats</th>
        <th scope="col">Bidding Action</th>
      </tr>
    </thead>
    <tbody id="table-term2">
      {{#each data}}
        {{#ifeq this.course_term 2}}

          <tr>
            <td><div class="form-check form-switch"><input
                  class="form-check-input"
                  type="checkbox"
                  id="checkboxterm2"
                /></div></td>
            <td scope="row">{{this.course_code}}</td>
            <td scope="row">{{this.course_faculty}}</td>
            <td scope="row">{{this.course_name}} : {{this.course_credits}}</td>
            <td scope="row"><button
                class="btn btn-primary view_bids"
              >View</button></td>
            <td scope="row">{{this.course_seats}}</td>
            <td scope="row">
              <input
                class="bid-num"
                size="7"
                type="number"
                min="0"
                placeholder="Enter Bid"
                disabled
              />
            </td>
          </tr>
        {{/ifeq}}
      {{/each}}
      <tfoot>
        <tr>
          <td colspan="6" style="text-align: center">** You will get a total of
            3 rounds to bid, this being the 1st round **</td>
          <td><button class="btn btn-primary" id="bid_submit">Submit Bid</button></td>
        </tr>
      </tfoot>
    </tbody>
  </table>
</div>
<!--Container Main end-->