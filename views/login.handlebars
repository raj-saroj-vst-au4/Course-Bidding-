
<body>
  <div class="body-background">
    <div
      class="container-fluid d-flex justify-content-center align-items-center h-100"
    >
      <div class="card p-3 text-center py-4">
        <h4>Login to Account</h4>
        <div>
          <span>Dont have an account?</span>
          <a href="/register" class="text-decoration-none">Signup</a>
        </div>

        <div class="mt-3 px-5">
          <input type="email" class="form-control" placeholder="E-mail" id="student_email" required/>
        </div>
        <div class="mt-3 px-5">
          <input type="password" class="form-control" placeholder="Password" id="student_pass" required/>
        </div>
        

        <div class="mt-3 d-grid px-3">
          <button class="btn btn-primary btn-block btn-signup text-uppercase" id="btn_login">
            <span>Login</span>
          </button>
        </div>
        </div>
      </div>
    </div>
  </div>
  <script src="js/jquery-3.6.0.min.js"></script>
  <script src="js/auth.js"></script>
</body>